{
  "name": "@klikkie/payments",
  "version": "1.0.0",
  "private": true,
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "start": "node -r reflect-metadata -r dotenv/config ./build/http/main.js",
    "start:dev": "ts-node -r reflect-metadata -r dotenv/config src/http/main.ts",
    "watch:start:dev": "nodemon --exec 'npm run start:dev'",
    "start:infra": "docker-compose up",
    "build": "npm run db:migrate && npm run compile",
    "compile": "prisma generate && rimraf build && tsc --project tsconfig.production.json --outDir build",
    "commit": "cz",
    "db:generate": "prisma generate",
    "db:dev": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "format": "prettier --write \"src/**/*.{js,ts}\" --no-error-on-unmatched-pattern",
    "lint": "eslint \"src/**/*.{js,ts}\" --no-error-on-unmatched-pattern",
    "lint:fix": "npm run lint --fix",
    "prepare": "husky install",
    "test": "jest",
    "postinstall": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "16.x"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.prisma": [
      "prisma format"
    ]
  },
  "dependencies": {
    "@prisma/client": "^4.8.1",
    "@ibabkin/ts-request-mediator": "^0.9.3",
    "@ibabkin/ts-constructor-injector": "^4.0.6",
    "@ibabkin/ts-ioc-container": "^23.2.4",
    "axios": "^1.2.2",
    "body-parser": "~1.20.1",
    "dotenv": "^10.0.0",
    "express": "~4.15.5",
    "reflect-metadata": "^0.1.13",
    "standard-http-error": "^2.0.1",
    "winston": "^3.8.2",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@faker-js/faker": "^7.3.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.21",
    "@types/standard-http-error": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "moq.ts": "^7.3.4",
    "nodemon": "^2.0.12",
    "prettier": "^2.8.2",
    "prisma": "^4.8.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "author": "ibabkin <igor@klikkie.com>"
}
