{
  "name": "backend-template",
  "version": "1.0.0",
  "private": true,
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "start": "node -r reflect-metadata -r dotenv/config ./build/web.js",
    "start:dev": "ts-node -r reflect-metadata -r dotenv/config src/web.ts",
    "watch:start:dev": "nodemon --exec 'npm run start:dev'",
    "start:infra": "docker-compose up",
    "build": "npm run db:migrate && npm run compile",
    "compile": "prisma generate && rimraf build && tsc --project tsconfig.production.json --outDir build",
    "commit": "cz",
    "db:generate": "prisma generate",
    "db:dev": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "format": "prettier --write \"src/**/*.{js,ts}\" --no-error-on-unmatched-pattern",
    "lint": "eslint \"src/**/*.{js,ts}\" --no-error-on-unmatched-pattern",
    "lint:fix": "npm run lint --fix",
    "prepare": "husky install",
    "test": "jest",
    "generate": "npm run generate:server && npm run generate:validators && npm run generate:format",
    "generate:server": "openapi-to-server --input swagger.json --output src/.generated/operations.d.ts",
    "generate:validators": "openapi-to-zod --input swagger.json --output src/.generated/validators.ts",
    "generate:format": "prettier --write \"src/.generated/**/*.{js,ts}\" --no-error-on-unmatched-pattern",
    "postinstall": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "18.16.x"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.prisma": [
      "prisma format"
    ]
  },
  "dependencies": {
    "@ibabkin/openapi-to-server": "^1.1.6",
    "@ibabkin/openapi-to-zod": "^1.1.4",
    "@ibabkin/ts-constructor-injector": "^4.0.6",
    "@ibabkin/ts-ioc-container": "^23.2.7",
    "@ibabkin/ts-request-mediator": "^0.9.6",
    "@prisma/client": "^4.15.0",
    "axios": "^1.4.0",
    "body-parser": "~1.20.2",
    "dotenv": "^16.1.4",
    "express": "~4.18.2",
    "openapi-types": "^12.1.3",
    "reflect-metadata": "^0.1.13",
    "standard-http-error": "^2.0.1",
    "winston": "^3.9.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@faker-js/faker": "^8.0.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.16",
    "@types/standard-http-error": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "moq.ts": "^7.4.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "prisma": "^4.15.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "author": "ibabkin <igor@klikkie.com>",
  "license": "ISC"
}
